material skymaterial(
    diffuse(uniform(<1,1,1>)),
    uniform(<0.04, 0.04, 0.07>)
)

material starmat(
    diffuse(uniform(<1,1,1>)),
    uniform(<1,1,1>)
)

material jupmat(
    diffuse(uniform(<0,0,0>)),
    image("../media/images/jupiter/jupiter.pfm")
)

material earthmat(
    diffuse(uniform(<0,0,0>)),
    image("../media/images/earth_texture.pfm")
)


