float ang_degrees(10)

material ground_material(
        diffuse(uniform(<0,0,0>), 1.0),
        image("../media/images/grass_texture.pfm")
)

material sky_material(
        diffuse(uniform(<0,0,0>), 1.0),  
        image("../media/images/skydome.pfm")
)

material sphere_material(
        specular(uniform(<0.5, 0.5, 0.5>), 0.0017),
        uniform(<1, 0, 0>)
)

material sphere_material2(
        cooktorrance(uniform(<0.5, 0.5, 0.5>), 0.9, 0.1, 0.5, ggx),
        image("../media/images/texture_earth.pfm")
)

plane (ground_material, identity)
sphere skydome(sky_material, scale([50, 50, 50]))
sphere firstsphere(sphere_material, translation([0, 0, 1]))
sphere secondsphere(sphere_material2, translation([0, 2, 2]))
camera(perspective, translation([-4, 0, 1]), 2.0, 2.0)
renderer(pathtracer, <0,0,0>, 2,3,2)

set width=600
set height=400
set antialiasing = off
set logger = on
set animation = new animation(2, 4)
animate (firstsphere, [0, translation([0,1,2])], [1, translation([2,3,4])], [2, translation([0,0,0])])